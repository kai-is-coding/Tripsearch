<h2>Login</h2>
<%# If email or password is not correct, show errors here %>
<% if flash[:error] %>
<br>
<strong><%= flash[:error] %></strong>
<br>
<% end %>


<%# Login form is here  %>
<%= form_tag login_path do %>
  <%= label_tag :email %>
  <%= email_field_tag :email %>
  <br>

  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>

  <%= submit_tag 'Login' %>

<% end %>
