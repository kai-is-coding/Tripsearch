<style media="screen">
  div.login_page {
    width: 99.5%;
    height: 88.7%;
    margin-top: 2px;
    position: absolute;
    text-align: center;
    background-color: rgba(96, 164, 8, 0.77);
  }

  h2, div.show_error, div.login {
    display: block;
  }

  h2 {
    top: 20vh;
    position: relative;
    margin: 0 auto;
    font-size: 45px;
  }

  #errors {
    position: relative;
    top: 20vh;

  }

  div.login {
    margin: 0 auto;
    position: relative;
    top: 22vh;
  }

  label {
    font-size: 25px;
    text-align: left;
  }

  input.email, input.password {
    width: 10vw;
    height: 5vh;
  }

  input.email {
    margin-right: 30vw;
  }

  input.password {
    margin-right: 30vw;

  }

  input#login {
    position: relative;
    top: 2vh;
    width: 6vw;
    font-size: 21px;
  }

</style>

<div class="login_page">

  <h2>Login</h2>
  <div class="show_error">

    <%# If email or password is not correct, show errors here %>
    <% if flash[:error] %>
    <br>
    <strong id="errors"><%= flash[:error] %></strong>
    <br>
    <% end %>
  </div>

  <div class="login">

    <%# Login form is here  %>
    <%= form_tag login_path do %>
      <%= label_tag :email%>
      <%= email_field_tag :email%>
      <br>

      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <br>

      <%= submit_tag 'Login', id: 'login' %>

    <% end %>
  </div>

</div>
