<h2>Details of <%= @country.name %></h2>
<%= form_tag wishlists_path, :method => 'post' do %>
  <%= hidden_field_tag(:country, @country.name) %>
  <%= submit_tag 'Save'%>
<% end %>

<label>
  <strong>Name:</strong>
  <%= @country.name %>
</label><br>

<label>
  <strong>Description:</strong>
  <%= @country.description %>
</label><br>

<label>
  <strong>Cities:</strong>
  <ul>
    <% @country.cities.each do |e| %>
    <li>
      <%= link_to e.name, city_path(e.id) %>
    </li>
    <% end %>
  </ul>
</label>
