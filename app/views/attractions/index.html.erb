<style media="screen">
  div.attractions_index {
    width: 99.5%;
    height: 88.7%;
    margin-top: 2px;
    position: absolute;
    text-align: center;
    background-color: rgba(96, 164, 8, 0.77);
  }
  ul {
    list-style-type: none;
  }
  h2, ul {
    display: block;
  }
  h2 {
    position: relative;
    top: 5vh;
    font-size: 45px;
  }
  ul {
    position: relative;
    top: 8vh;
    font-size: 20px;
  }
  li {
    margin: 10px;

  }
  #attraction, #attraction:visited {
    text-decoration: none;
    color: white;
  }
  #new_attraction, #new_attraction:visited {
    position: relative;
    top: 7vh;
    left: 2vw;
    text-decoration: none;
    color: white;
    background-color: rgba(142, 47, 18, 0.81);
  }
</style>

<div class="attractions_index">
  <h2>List of Attractions:</h2>
  <ul>
    <% @attractions.each do |attraction| %>
      <li>
        <%= link_to attraction.name, attraction_path(attraction.id), id: "attraction" %>
      </li>

    <% end %>
  </ul>

  <% if @current_user.present? && @current_user.admin? %>
    <%= link_to 'Add New Attraction', new_attraction_path, id: 'new_attraction' %>
  <% end %>
</div>
