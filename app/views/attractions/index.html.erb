<style media="screen">
  div.attractions_index {
    width: 99.5%;
    height: 88.7%;
    margin-top: 2px;
    position: absolute;
    text-align: center;
    background-color: rgba(96, 164, 8, 0.77);
  }
  ul {
    list-style-type: none;
  }
  h2, ul {
    display: block;
  }
  h2 {
    position: relative;
    top: 80px;
    font-size: 45px;
  }
  ul {
    position: relative;
    top: 110px;
    font-size: 20px;
  }
  li {
    margin: 10px;

  }
  #attraction, #attraction:visited {
    text-decoration: none;
    color: white;
  }
</style>

<div class="attractions_index">
  <h2>List of Attractions:</h2>
  <ul>
    <% @attractions.each do |attraction| %>
      <li>
        <%= link_to attraction.name, attraction_path(attraction.id), id: "attraction" %>
      </li>

    <% end %>
  </ul>
</div>
