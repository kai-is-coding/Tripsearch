<%# show messages if name already exists and password does not match %>
<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |e| %>
    <li>
      <%= e %>
    </li>
    <% end %>
  </ul>
<% end %>

<%# form for creating new users %>
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>

  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>

  <%= f.label :image %>
  <%= f.text_field :image %>
  <br>

  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <br>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>

  <%= f.label :password_confirmation, 'Confirm Password' %>
  <%= f.password_field :password_confirmation %>
  <br>

  <%= f.label :admin %>
  <%= f.text_field :admin %>


  <%= f.submit 'Sign up' %>
<% end %>
