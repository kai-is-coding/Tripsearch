
<style media="screen">
  div.user_update {
    width: 99.5%;
    height: 88.7%;
    margin-top: 2px;
    position: absolute;
    text-align: center;
    background-color: rgba(96, 164, 8, 0.77);
  }
  h2 {
    position: relative;
    top: 10vh;
    font-size: 35px;

  #update {
    font-size: 16px;
    position: relative;
    top: 2vh;
    width: 8vw;
  }

</style>

<div class="user_update">

  <h2>Update your profile.</h2>
  <div id="errors">

    <%# show messages if name already exists and password does not match %>
    <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |e| %>
        <li>
          <strong class="show_errors"><%= e %></strong>
        </li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="labels">

    <%# form for creating new users %>
    <%= form_for @user do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>

      <%= f.label :email %>
      <%= f.email_field :email %>
      <br>

      <%= form_tag add_image_user_path(@user.id) do %>
      <%= f.label :image %>
      <%= f.text_field :image %>
      <% end %>

      <%= f.label :bio %>
      <%= f.text_field :bio %>
      <br>

      <%= f.label :password %>
      <%= f.password_field :password %>
      <br>

      <%= f.label :password_confirmation, 'Confirm Password' %>
      <%= f.password_field :password_confirmation %>
      <br>

      <%= f.label :admin %>
      <%= f.text_field :admin %>
      <br>


      <%= f.submit 'Update', id: 'update' %>
    <% end %>
  </div>

</div>
