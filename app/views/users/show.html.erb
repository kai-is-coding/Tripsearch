<h2>Details of users</h2>
<% if @current_user.present? && @current_user.admin? %>
  <%= link_to 'A list of all users', users_path %>
<% end %>
<br>

<%= link_to 'Change Profile', edit_user_path(@user.id) %>
|
<%= link_to 'Delete your account', user_path(@user.id), method: 'delete' %><br>
<label>
  <strong>Name:</strong>
  <%= @user.name %>
</label><br>

<label>
  <strong>Email:</strong>
  <%= @user.email %>
</label><br>

<% if @user.image.present? %>
<label>
  <strong>Image:</strong>
  <%= image_tag @user.image, alt: @user.name, class: 'user' %>
</label><br>
<% end %>

<label>
  <strong>Bio:</strong>
  <%= @user.bio %>
</label><br>

<label>
  <strong>Admin:</strong>
  <%= @user.admin %>
</label><br>

<label>
  <strong>Wistlist:</strong>
  <%= link_to @user.wishlist.name, wishlist_path(@user.wishlist.id) %>
</label>
