<!DOCTYPE html>
<html>
  <head>
    <title>Tripsearch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <header>
      <h1>Trip Search</h1>
      <nav>
        <%= link_to 'Home Page', root_path %>
        <% if @current_user.present? %>
          Welcome, <%= link_to @current_user.name, user_path(@current_user.id) %>
          <% if @current_user.admin? %>
          <strong>Admin User</strong>
          <% end %>
          (<%= link_to 'Log out', login_path, method: 'delete' %>)
        <% else %>
        <%= link_to 'Login', login_path %>
        <% end %>
        |
        <%= link_to 'Sign in', new_user_path %>
      </nav>
    </header>

    <h2>Search here</h2>
      <% if flash[:alert] %>
        <%= flash[:alert] %>
      <% end %>

      <%= form_with(url: countries_path , method: 'get', local: true) do%>
        <div class="">
          <strong>Search by:</strong>
          <%= select_tag(:search_id, raw('<option value="1">Countries</option><option value="2">Cities</option><option value="3">Attractions</option>')) %>
          <%= text_field_tag :search_id, nil, placeholder: 'e.g. Australia',class: '' %>
        </div>
        <%= button_tag 'Search', class: '' %>
      <% end %>
    <hr>

    <%= yield %>
  </body>
</html>
